<?xml version="1.0" encoding="utf-8"?>


<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.ecommerce.welcom"
    android:fitsSystemWindows="true">




    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/chococake3"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relative_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp">


                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="53dp"
                    android:drawableStart="@drawable/shopping" />

                <TextView
                    android:id="@+id/mic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toStartOf="@+id/logginPerson"
                    android:drawableStart="@drawable/ic_baseline_mic_24"
                    android:drawablePadding="5dp" />

                <TextView
                    android:id="@+id/logginPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:layout_toStartOf="@+id/cart"
                    android:drawableStart="@drawable/ic_baseline_person_24"
                    android:drawablePadding="5dp" />


                <TextView
                    android:id="@+id/cart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="15dp"
                    android:drawableStart="@drawable/ic_baseline_add_shopping_cart_24"
                    android:drawablePadding="5dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/searchlayout"
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <EditText
                    android:id="@+id/search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp"
                    android:background="@drawable/search_background"
                    android:drawableStart="@drawable/ic_baseline_search_24"
                    android:drawableEnd="@drawable/ic_baseline_photo_camera_24"
                    android:drawablePadding="15dp"
                    android:hint="Search"
                    android:imeOptions="actionDone"
                    android:padding="6dp" />




            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

            <ImageView
                android:id="@+id/list"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:src="@drawable/sale1"
                />
                <ImageView
                    android:id="@+id/list1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sale1" />
                <ImageView
                    android:id="@+id/list2"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sale1"
                    />

                <ImageView
                    android:id="@+id/list4"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/sale1"
                    />



        </LinearLayout>
        </com.google.android.material.appbar.AppBarLayout>


    </LinearLayout>

 </layout>

